<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas..com/apk/res-auto"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/play_bg"
    tools:context=".ActivityPlay">

    <TextView
        android:id="@+id/question"
        android:layout_width="339dp"
        android:layout_height="100dp"
        android:fontFamily="@font/tommy_soft_reg_out"
        android:text="TextView"
        android:textColor="#000000"
        app2:layout_constraintBottom_toBottomOf="parent"
        app2:layout_constraintEnd_toEndOf="parent"
        app2:layout_constraintStart_toStartOf="parent"
        app2:layout_constraintTop_toTopOf="parent"
        app2:layout_constraintVertical_bias="0.178" />

    <Button
        android:id="@+id/btnFaux"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tommy_soft_black_out"
        android:text="FAUX"
        app2:layout_constraintBottom_toBottomOf="parent"
        app2:layout_constraintEnd_toStartOf="@+id/btnVrai"
        app2:layout_constraintHorizontal_bias="0.659"
        app2:layout_constraintStart_toStartOf="parent"
        app2:layout_constraintTop_toBottomOf="@+id/question"
        app2:layout_constraintVertical_bias="0.789" />

    <Button
        android:id="@+id/btnVrai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="88dp"
        android:fontFamily="@font/tommy_soft_black_out"
        android:text="VRAI"
        app2:layout_constraintBottom_toBottomOf="parent"
        app2:layout_constraintEnd_toEndOf="parent"
        app2:layout_constraintTop_toBottomOf="@+id/question"
        app2:layout_constraintVertical_bias="0.789" />

    <Button
        android:id="@+id/suivant"
        android:layout_width="121dp"
        android:layout_height="46dp"
        android:drawableRight="@drawable/next"
        android:fontFamily="@font/tommy_soft_black_out"
        android:text="Suivant "
        app2:layout_constraintBottom_toBottomOf="parent"
        app2:layout_constraintEnd_toEndOf="parent"
        app2:layout_constraintHorizontal_bias="0.879"
        app2:layout_constraintStart_toStartOf="parent"
        app2:layout_constraintTop_toTopOf="parent"
        app2:layout_constraintVertical_bias="0.859" />

    <TextView
        android:id="@+id/explication"
        android:layout_width="340dp"
        android:layout_height="239dp"
        android:fontFamily="@font/tommy_soft_reg_out"
        android:text="TextView"
        android:textColor="#000000"
        app2:layout_constraintBottom_toBottomOf="parent"
        app2:layout_constraintEnd_toEndOf="@+id/question"
        app2:layout_constraintHorizontal_bias="0.0"
        app2:layout_constraintStart_toStartOf="@+id/question"
        app2:layout_constraintTop_toTopOf="parent"
        app2:layout_constraintVertical_bias="0.557" />
</androidx.constraintlayout.widget.ConstraintLayout>